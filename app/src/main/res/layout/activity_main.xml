<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.example.androidviewdemo.DashboardView
        android:id="@+id/dash_board"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true" />

    <com.example.androidviewdemo.PieChatView
        android:id="@+id/pie_chat"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_below="@id/dash_board"
        android:layout_centerHorizontal="true" />

    <com.example.androidviewdemo.AvatarView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/avatar"
        android:layout_below="@id/pie_chat"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/jump_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="跳转到第7节作业"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        />


</RelativeLayout>