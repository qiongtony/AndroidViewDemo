<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_with_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="结合toolbar"
        android:textColor="@android:color/black" />


    <Button
        android:id="@+id/btn_with_toolbar_snap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="结合toolbarSnap"
        android:textColor="@android:color/black" />


    <Button
        android:id="@+id/btn_with_view_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="结合viewPager"
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/btn_custom_item_decoration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="自定义分割线"
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/btn_custom_simple_behavior"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="自定义分简单的Behavior"
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/btn_nestscroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="嵌套滑动"
        android:textColor="@android:color/black" />

</LinearLayout>