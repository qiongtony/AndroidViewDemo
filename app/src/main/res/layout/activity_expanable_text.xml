<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".activity.ExpanableTextActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.example.androidviewdemo.view.ExpandableTitleTextView
        android:id="@+id/tvTopic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:open_topic_mode="true"
        app:metv_maxLines="2"
        android:visibility="visible"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textSize="14sp"
        app:expand_text_size="12sp"
        android:background="@android:color/holo_orange_light"
        app:expand_text_color="@android:color/holo_blue_light"
        app:title_text_color="@color/colorAccent"
        tools:text="好嗨哟（表达很高兴和兴奋的状态）.#好嗨哟#（表达很高兴和兴奋的状态）.好嗨哟（表达很高兴和兴奋的状态）.好嗨哟（表达很高兴和兴奋的状态）.好嗨哟（表达很高兴和兴奋的状态）.好嗨哟（表达很高兴和兴奋的状态）" />

    <Button
        android:id="@+id/btnChangeContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="设置文本"
        />
</LinearLayout>